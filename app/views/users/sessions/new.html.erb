<h1 class="text-center my-4">
  <i class="bi bi-door-closed me-2"></i>ログイン
</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" do %>
      メールアドレス
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-1">
    <%= f.label :password, class: "form-label" do %>
      パスワード
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" do %>
        ログイン状態を保持する
      <% end %>
    </div>
  <% end %>

  <div class="my-4">
    <%= f.submit "ログイン", class: "btn btn-outline-success w-100" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
