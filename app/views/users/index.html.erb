<main class="monitor-center">
    <div>
        <div class="user-home-info-box">
            <!-- ユーザの画像（仮） -->
            <%= image_tag @user.icon.to_s, class: "user-img-box" %>
            <h3><%= @user.name %></h3>
        </div>
        <div class="user-action-list-box">
            <div class="mb-4">
                <%= link_to 'タスクの表示', tasks_path, class: 'btn btn-outline-primary' %>
                <%= link_to 'ユーザ情報の変更', edit_user_registration_path, class: 'btn btn-outline-warning' %>
            </div>
            <%=
                button_to 'ログアウト', 
                destroy_user_session_path,
                class: 'btn btn-warning',
                method: :delete
            %>
        </div>
    </div>
</main>
