<h1 class="text-center my-4">
  ユーザの登録情報変更
</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" do %>
      メールアドレス
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" do %>
      ユーザー名
    <% end %>
    <%= f.text_field :name, autocomplete: "text", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" do %>
      パスワード
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <div class="form-text">パスワードを変更しない場合は空欄にしてください。</div>
      <div class="form-text"><%= @minimum_password_length %>文字以上入力してください。</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" do %>
      パスワード（確認用）
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :icon, class: "form-label" do %>
      アイコン
    <% end %>
    <%= f.file_field :icon, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class: "form-label" do %>
      現在のパスワード
    <% end %>
    <div class="form-text">現在のパスワードを入力してください。</div>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="text-center my-4">
    <%= f.submit "変更する", class: "btn btn-outline-success w-100" %>
  </div>
<% end %>

<h2 class="text-center my-4 text-danger"><i class="bi bi-person-x-fill se-2"></i>アカウントの削除</h2>

<%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか？", turbo_confirm: "本当にアカウントを削除しますか？" }, method: :delete, class: "btn btn-danger w-100" %>

<div class="my-4 text-center">
  <%= link_to "戻る", :back %>
</div>
