<h1 class="text-center my-4">
  <i class="bi bi-person-plus me-2"></i>新規登録
</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" do %>
      メールアドレス
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
    
  <div class="mb-3">
    <%= f.label :name, class: "form-label" do %>
      ユーザー名
    <% end %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" do %>
      パスワード
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <div class="form-text"><%= @minimum_password_length %>文字以上入力してください。</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" do %>
      パスワード（確認用）
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :icon, class: "form-label" do %>
      アイコン
    <% end %>
    <%= f.file_field :icon, class:"form-control" %>
  </div>

  <div class="my-4">
    <%= f.submit "新規登録", class: "btn btn-outline-primary w-100" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
