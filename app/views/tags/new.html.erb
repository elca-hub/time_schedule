<header class="text-center">
    <h1>タグの追加</h1>
    <p>タグの新規追加を行います。</p>
</header>

<%= form_with url: tags_path do |form| %>
  <div style="margin: auto 10rem;">
    <div class="mb-3">
      <label for="tag_name" class="form-label">名前</label><br>
      <input type="text" name="tag[name]" id="tag_name" class="form-control">
    </div>

    <div class="mb-3 text-center">
      <input class="btn btn-outline-success" type="submit" name="commit" value="タグを追加" data-disable-with="タグを追加">
    </div>
  </div>
<% end %>