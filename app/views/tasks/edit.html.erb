<header class="text-center">
    <h1>タスクの更新</h1>
    <p><%= @task.title %>の更新を行います</p>
</header>

<%= form_with url: task_path(@task.id), method: :put  do |form| %>
  <div style="margin: auto 10rem;">
    <div class="mb-3">
      <label for="task_title" class="form-label">タイトル</label><br>
      <input type="text" name="task[title]" id="task_title" class="form-control" value="<%= @task.title %>">
    </div>
    
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="記事の内容を書いてください" id="task_content" name="task[content]"><%= @task.content %></textarea>
      <label for="task_content">内容</label>
    </div>

    <div class="mb-3 text-center">
      <input class="btn btn-outline-success" type="submit" name="commit" value="タスクを追加" data-disable-with="タスクを追加">
    </div>
  </div>
<% end %>